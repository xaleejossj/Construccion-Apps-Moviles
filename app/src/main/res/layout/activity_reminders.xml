<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/reminders_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recordatorios y Notificaciones"
        android:textSize="24sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/add_reminder_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agregar Recordatorio"/>

    <Button
        android:id="@+id/view_notifications_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver Notificaciones"/>
</LinearLayout>
